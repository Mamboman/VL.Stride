<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <LangVersion>8.0</LangVersion>
    
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackageId>$(AssemblyName)</PackageId>
    <Description>$(AssemblyName)</Description>
    <PackageTags>vl stride</PackageTags>
    <RootNamespace>VL.Stride</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="..\*.vl" Pack="true" PackagePath=" " />
    <None Include="..\Demos\*.vl" Pack="true" PackagePath="Demos\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- A pure package dependency so on install all VL packages come in -->
    <PackageReference Include="Stride.Core" Version="$(StrideVersion)" />
    <PackageReference Include="Stride.Core.Assets.CompilerApp" Version="$(StrideVersion)" IncludeAssets="build;buildTransitive" />
    <PackageReference Include="Stride.Engine" Version="$(StrideVersion)" />
    <PackageReference Include="Stride.Navigation" Version="$(StrideVersion)" />
    <PackageReference Include="Stride.Particles" Version="$(StrideVersion)" />
    <PackageReference Include="Stride.Physics" Version="$(StrideVersion)" />
    <PackageReference Include="Stride.UI" Version="$(StrideVersion)" />
    <PackageReference Include="Stride.Video" Version="$(StrideVersion)" />
  </ItemGroup>
  <Target Name="IncludeStridePackageContent" BeforeTargets="InferPackageContents" DependsOnTargets="_StridePrepareAssetsForPack">
    <Message Importance="high" Text="Called Stride package targets" />
  </Target>
  <ItemGroup Condition="'$(InPrivateRepo)' == 'true'">
    <ProjectReference Include="..\..\..\..\VL.Core\src\VL.Core.csproj" />
    <ProjectReference Include="..\..\..\..\..\vvvv50\VL.Lang.Roslyn\src\VL.Lang.Roslyn.csproj" />
    <ProjectReference Include="..\..\..\..\VL.CoreLib\src\VL.CoreLib.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(InPrivateRepo)' != 'true'">
    <PackageReference Include="VL.Core" Version="$(VLVersion)" />
    <PackageReference Include="VL.Lang.Roslyn" Version="$(VLVersion)" />
    <PackageReference Include="VL.CoreLib" Version="$(VLVersion)" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="**\*.sdsl.cs">
      <DesignTime>True</DesignTime>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>%(Filename).sdsl</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Update="**\*.sdsl">
      <LastGenOutput>%(Filename).sdsl.cs</LastGenOutput>
    </None>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Update="Nerdbank.GitVersioning" Version="2.3.186">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>