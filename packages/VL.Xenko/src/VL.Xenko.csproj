<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackageId>$(AssemblyName)</PackageId>
    <Description>$(AssemblyName)</Description>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\*.vl" Pack="true" TargetPath="." />
    <None Include="..\Demos\*.vl" Pack="true" PackagePath="Demos\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.6.0" />
    <PackageReference Include="VL.Core" Version="2019.2.0-0197-ga168e3b40d" />
    <!-- A pure package dependency so on install all VL packages come in -->
    <PackageReference Include="Xenko.Core" Version="3.2.0.1-beta02-vvvv-0833" />
    <PackageReference Include="Xenko.Core.Assets.CompilerApp" Version="3.2.0.1-beta02-vvvv-0833" IncludeAssets="build;buildTransitive" />
    <PackageReference Include="Xenko.Engine" Version="3.2.0.1-beta02-vvvv-0833" />
    <PackageReference Include="Xenko.Navigation" Version="3.2.0.1-beta02-vvvv-0833" />
    <PackageReference Include="Xenko.Particles" Version="3.2.0.1-beta02-vvvv-0833" />
    <PackageReference Include="Xenko.Physics" Version="3.2.0.1-beta02-vvvv-0833" />
    <PackageReference Include="Xenko.UI" Version="3.2.0.1-beta02-vvvv-0833" />
    <PackageReference Include="Xenko.Video" Version="3.2.0.1-beta02-vvvv-0833" />
  </ItemGroup>
  <Target Name="IncludeXenkoPackageContent" BeforeTargets="InferPackageContents" DependsOnTargets="_XenkoPrepareAssetsForPack">
    <Message Importance="high" Text="Called Xenko package targets" />
  </Target>
  <ItemGroup>
    <PackageReference Update="Nerdbank.GitVersioning" Version="2.3.186">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>