<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackageId>$(AssemblyName)</PackageId>
    <Description>$(AssemblyName)</Description>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\*.vl" Pack="true" TargetPath="." />
    <None Include="..\Demos\*.vl" Pack="true" PackagePath="Demos\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="VL.Core" Version="2019.2.0-0177-gd1ea295167" />
    <PackageReference Include="Xenko.Assets" Version="3.2.0.1-beta02-vvvv-0825" />
    <PackageReference Include="Xenko.Assets.Models" Version="3.2.0.1-beta02-vvvv-0825" />
    <!-- A pure package dependency so on install all VL packages come in -->
    <PackageReference Include="Xenko.Core" Version="3.2.0.1-beta02-vvvv-0825" />
    <PackageReference Include="Xenko.Core.Assets.CompilerApp" Version="3.2.0.1-beta02-vvvv-0825" IncludeAssets="build;buildTransitive" />
    <PackageReference Include="Xenko.Engine" Version="3.2.0.1-beta02-vvvv-0825" />
    <PackageReference Include="Xenko.Navigation" Version="3.2.0.1-beta02-vvvv-0825" />
    <PackageReference Include="Xenko.Particles" Version="3.2.0.1-beta02-vvvv-0825" />
    <PackageReference Include="Xenko.Physics" Version="3.2.0.1-beta02-vvvv-0825" />
    <PackageReference Include="Xenko.TextureConverter" Version="3.2.0.1-beta02-vvvv-0825" />
    <PackageReference Include="Xenko.UI" Version="3.2.0.1-beta02-vvvv-0825" />
    <PackageReference Include="Xenko.Video" Version="3.2.0.1-beta02-vvvv-0825" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Resources\ffmpeg.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <Target Name="IncludeXenkoPackageContent" BeforeTargets="InferPackageContents" DependsOnTargets="_XenkoPrepareAssetsForPack">
    <Message Importance="high" Text="Called Xenko package targets" />
  </Target>
</Project>