<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <LocalNuGetConfigFile>$(MsBuildThisFileDirectory)NuGet.config</LocalNuGetConfigFile>
    
    <!-- Package properties -->
    <EmitNuSpec>true</EmitNuSpec>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageOutputPath>$(MsBuildThisFileDirectory)..\packages-build\</PackageOutputPath>
    <IncludeFrameworkReferencesInPackage>false</IncludeFrameworkReferencesInPackage>
    <Product>VL.Xenko</Product>
    <Authors>vvvv group</Authors>
    <Owners>$(Authors)</Owners>
    <Copyright>Copyright © 2019 by vvvv group. All rights reserved.</Copyright>
    <PackageProjectUrl>https://github.com/vvvv/VL.Xenko</PackageProjectUrl>
  </PropertyGroup>
</Project>